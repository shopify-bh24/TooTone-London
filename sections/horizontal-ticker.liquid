<style>
  .horizontal-ticker {
    overflow-x: hidden;
    width: 100%;
    position: relative;
  }

  .horizontal-ticker__inner {
    display: flex;
    overflow: hidden;
    white-space: nowrap;
  }
  
  .horizontal-ticker__container {
    display: flex;
    width: fit-content;
    align-items: center;
    will-change: transform;
    {% comment %} animation: horTicker 50s linear infinite; {% endcomment %}
  }
  
  .horizontal-ticker__item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
    flex-shrink: 0;
  }

  .horizontal-ticker__item img {
    width: 80px;
    height: auto;
    aspect-ratio: 1/1;
    object-fit: contain;
    image-rendering: crisp-edges;
  }

  @keyframes horTicker {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* Safari Fix */
  @supports (-webkit-touch-callout: none) {
    .horizontal-ticker__container {
      {% comment %} animation: horTicker 50s linear infinite; {% endcomment %}
      transform: translateX(0);
    }
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .horizontal-ticker__container {
      animation-duration: 30s;
    }
  }

  @media (max-width: 568px) {
    .horizontal-ticker__item {
      padding: 0 5px;
    }
  }
</style>

<div class="horizontal-ticker">
  <div class="horizontal-ticker__inner">
    <div class="horizontal-ticker__container">
      {%- for block in section.blocks -%}
        <div class="horizontal-ticker__item">
          {% if block.settings.image-picker %}
            <img src="{{ block.settings.image-picker | image_url: width: 3200 }}" 
                 srcset="{{ block.settings.image-picker | image_url: width: 1600 }} 1x, {{ block.settings.image-picker | image_url: width: 3200 }} 2x" 
                 alt="Ticker Image"
                 loading="lazy">
          {% endif %}
        </div>
      {%- endfor -%}
      <!-- Duplicate for continuous loop -->
      {%- for block in section.blocks -%}
        <div class="horizontal-ticker__item">
          {% if block.settings.image-picker %}
            <img src="{{ block.settings.image-picker | image_url: width: 3200 }}" 
                 srcset="{{ block.settings.image-picker | image_url: width: 1600 }} 1x, {{ block.settings.image-picker | image_url: width: 3200 }} 2x" 
                 alt="Ticker Image"
                 loading="lazy">
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


